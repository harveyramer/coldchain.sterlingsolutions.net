{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      {% include "partials/components/intro.njk" %}
      <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-top-900 pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
        {{ content | safe }}

        {# Call to action link #}
        {% if ctalink %}
          <div class="[ cta ] [ pad-top-900 pad-bottom-900 ]">
            <button class="[ button ] [ font-base text-700 weight-normal ]" onclick="location.href = '{{ctalink}}'">{{ctatext}}</button>
          </div>
        {% endif %}
      </div>
    </article>
  </main>
{% endblock %}

{{ content | safe }}