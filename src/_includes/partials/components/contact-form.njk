{% from "macros/form.njk" import label,
field,
textarea,
button %}

<form name="contact" method="POST" data-netlify="true" action="/thank-you" netlify-honeypot="bot-field">
  <ol class="[ field-list ]">
    <li class="[ field-list__field-group ]">
      {{ label("Your name", "name") }}
      {{ field( "text", "name", { required: true, placeholder: "Your full name", autocomplete: "name", autocorrect: "off", autocapitalize: "off" } ) }}
    </li>
    <li class="[ field-list__field-group ]">
      {{ label("Your email address", "email") }}
      {{ field( "email", "email", { required: true, placeholder: "Your business email", autocomplete: "email" } ) }}
    </li>
    <li class="[ field-list__field-group ]">
      {{ label("How can we help you?", "message") }}
      {{ textarea( "message", { required: true, autocapitalize: "sentences", spellcheck: "true" } ) }}
    </li>
    <li hidden="hidden">
      <label>Donâ€™t fill this out if you're human:
        <input name="bot-field"/></label>
    </li>
  </ol>
  {{ button("Get our help") }}
</form>