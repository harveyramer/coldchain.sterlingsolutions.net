<ul class="social-icons [ gap-bottom-600 ]">
  <h4 class="[ gap-top-300 ]">Connect with Us</h4>
  {% for icon, link in site.social_links %}

    <li class="ml-4">

      <a href="{{ link | safe }}" class="display-block" target="_blank" rel="noopener noreferrer">

        <span class="sr-only">Find me on
          {{ icon }}</span>

        <svg class="block" fill="currentColor" role="img" aria-hidden="true" width="18" height="18">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#icon-{{ icon }}"></use>
        </svg>

      </a>

    </li>

  {% endfor %}

</ul>