<footer role="contentinfo" class="[ site-foot ] [ pad-top-700 pad-bottom-900 ]">
  <div class="wrapper">
    <div class="[ site-foot__inner ] [ md:box-flex space-between align-start ]">

      <div>
        <article class="[ site-foot__details ] [ sf-flow measure-compact ]">
          <h2 class="font-base text-600">{{ site.name }}</h2>
          {% if site.shortDesc %}
            {{ site.shortDesc | markdownFilter | safe }}
          {% endif %}
        </article>
      </div>

      <div>
        {% set ariaLabel = 'footer navigation' %}
        {% include "partials/components/nav.njk" %}
        {% include "partials/components/social-icons.njk" %}
      </div>
    </div>
    {% if site.showThemeCredit %}
      <p class="[ site-foot__credit ] [ pad-top-900 ]">
        Powered by the
        <a href="https://hylia.website" rel="external">Hylia Eleventy Starter Kit v{{ pkg.version }}</a>.
      </p>
    {% endif %}
  </div>
  <div class="wrapper [ pad-top-900 pad-bottom-500 ]">
    {% if site.showLegal %}
      <small class="[ site-foot__credit ] [ pad-top-900 ]">
        Copyright &copy;
        {{ global.currentYear }}
        <a href="https://www.sterlingsolutions.net/about/">Sterling Solutions, LLC.</a>
      </small>
    {% endif %}
  </div>
</footer>